<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:jurong="http://schemas.android.com/apk/res/com.ssiot.jurong"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <include 
        android:id="@+id/ctr_big_top"
        layout="@layout/big_top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ctr_big_top"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.ssiot.jurong.view.CtrUIView
                android:id="@+id/ctr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                jurong:myjurongbk="@drawable/ctr_air"
                jurong:myjurongtxt="@string/device_type_air" />

            <com.ssiot.jurong.view.CtrUIView
                android:id="@+id/ctr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                jurong:myjurongbk="@drawable/ctr_water"
                jurong:myjurongtxt="@string/device_type_sun_1" />

            <com.ssiot.jurong.view.CtrUIView
                android:id="@+id/ctr_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                jurong:myjurongbk="@drawable/ctr_water"
                jurong:myjurongtxt="@string/device_type_sun_2" />

            <com.ssiot.jurong.view.CtrUIView
                android:id="@+id/ctr_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                jurong:myjurongbk="@drawable/ctr_water"
                jurong:myjurongtxt="@string/device_type_water" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
