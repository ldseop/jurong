<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:jurong="http://schemas.android.com/apk/res/com.ssiot.jurong" 
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"
    android:background="@drawable/ctr_device_bk"
    >  

    <TextView 
        android:id="@+id/device_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="设备名称"
        android:layout_centerHorizontal="true"/>
    <ImageView 
        android:id="@+id/device_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ctr_air"
        android:scaleType="centerInside"
        android:clickable="false"
        />
    
    <Switch 
        android:id="@+id/device_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:switchMinWidth="20dp"
        android:minWidth="20dp"
        android:layout_below="@id/device_img"
        android:layout_centerHorizontal="true"
        android:track="@drawable/switch_track_select"
        android:thumb="@drawable/switch_thumb"
        android:focusable="false"
        android:clickable="false"
        android:textOn=""
        android:textOff=""
        android:gravity="center"/>

