<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:jurong="http://schemas.android.com/apk/res/com.ssiot.jurong"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View 
        android:id="@+id/mycbottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1px"/>
    
    <TextView 
        style="@style/MyTxtLinear"
        android:id="@+id/areac_dapeng"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:text=" 温室大棚区"/>
    
    <TextView 
        style="@style/MyTxtLinear"
        android:id="@+id/areac_water"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/areac_dapeng"
        android:text=" 水产养殖区"/>
    
    <TextView 
        style="@style/MyTxtLinear"
        android:id="@+id/areac_datian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/areac_water"
        android:text=" 大田区"/>
    
    
    <ListView
        android:id="@+id/ctr_seperate_list" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/areac_water">
        
    </ListView>
    
    
    
</RelativeLayout>