<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:jurong="http://schemas.android.com/apk/res/com.ssiot.jurong"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View 
        android:id="@+id/mybottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1px"/>
    <TextView 
        android:id="@+id/area_dapeng"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#ffe6e6e6"
        android:gravity="center_vertical"
        android:layout_margin="1px"
        android:text=" 温室大棚区"
        android:textSize="17sp"/>
    
    <TextView 
        android:id="@+id/area_water"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/area_dapeng"
        android:background="#ffe6e6e6"
        android:gravity="center_vertical"
        android:layout_margin="1px"
        android:text=" 水产养殖区"
        android:textSize="17sp"/>
    
    <TextView 
        android:id="@+id/area_datian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/area_water"
        android:background="#ffe6e6e6"
        android:gravity="center_vertical"
        android:layout_margin="1px"
        android:text=" 大田区"
        android:textSize="17sp"/>
    
    
    <ListView
        android:id="@+id/moni_seperate_list" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/area_water">
        
    </ListView>
    
    
    
</RelativeLayout>